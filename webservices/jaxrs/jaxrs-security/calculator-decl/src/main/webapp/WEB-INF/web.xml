<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee"
  xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
  version="3.0">
  <display-name>JAX-RS security practice code</display-name>

  <servlet>
    <servlet-name>name.abhijitsarkar.webservices.jaxrs.security.decl.config.JAXRSDeclSecurityApplication</servlet-name>
  </servlet>
  <servlet-mapping>
    <servlet-name>name.abhijitsarkar.webservices.jaxrs.security.decl.config.JAXRSDeclSecurityApplication</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>

  <!-- <security-constraint> element must be present; the web container checks for 
    security before JAX-RS does and without a <security-constraint>, the proper security 
    context is not set. -->
  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Calculator Decl</web-resource-name>
      <url-pattern>/*</url-pattern>
      <http-method>GET</http-method>
    </web-resource-collection>
    <auth-constraint>
      <role-name>*</role-name>
    </auth-constraint>
  </security-constraint>

  <login-config>
    <auth-method>BASIC</auth-method>
    <realm-name>file</realm-name>
  </login-config>

  <!-- Either this or @DeclareRoles must be present -->
  <!-- <security-role> <role-name>celebrity</role-name> </security-role> -->

</web-app>